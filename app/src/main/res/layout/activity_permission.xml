<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="48.0dip"
        android:layout_marginLeft="56.0dip"
        android:layout_marginRight="56.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_permission_title"
            style="@style/Welcome.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_permissions_promptable_title" />

        <TextView
            android:id="@+id/enable_permission_procedure"
            style="@style/Welcome.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/required_permissions_promptable_promo" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48.0dip"
            android:importantForAccessibility="no"
            android:src="@drawable/empty_permissions" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_gravity="bottom"
        android:background="@color/quantum_cyan700">

        <Button
            android:id="@+id/next"
            style="@style/Welcome.Footer.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_light"
            android:contentDescription="@string/next"
            android:onClick="onNext"
            android:text="@string/next" />

    </FrameLayout>
</LinearLayout>